{
    "name": "lithemod/crypt",
    "description": "A lightweight encryption utility for PHP applications, providing secure data encryption and decryption functionalities.",
    "type": "library",
    "require": {
        "php": "^8.0",
        "lithemod/env": "^1.0",
        "lithemod/log": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Lithe\\Support\\Security\\": "src/Support",
            "Lithe\\Exceptions\\Encryption\\": "src/Exceptions"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT"
}
